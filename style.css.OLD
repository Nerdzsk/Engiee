/* style.css - Grafické rozhranie Engee 3D */

body { 
    margin: 0; 
    overflow: hidden; 
    background: #000; 
}

#hud {
    position: fixed; 
    top: 20px; 
    left: 20px; 
    z-index: 1000; 
    font-family: 'Courier New', monospace;
}

/* === New HUD layout inspired by provided mockup === */
:root {
    --hud-bg: rgba(20,20,20,0.8);
    --hud-accent-yellow: #ffff00;
    --hud-accent-green: #00ff64;
    --hud-accent-cyan: #00ffff;
    --hud-accent-orange: #ffaa00;
    --hud-accent-purple: #cc88ff;
    --hud-text-dim: #99a;
}

#hud.hud-wrap {
    top: auto;
    left: 0; right: 0; bottom: 0;
    width: 100%;
    padding: 6px 12px 8px 12px;
    background: linear-gradient(to top, rgba(0,0,0,0.75), rgba(0,0,0,0));
    pointer-events: none; /* nech scéna dostáva kliky mimo HUDu */
}

/* === HUD FRAME (tiers) === */
:root {
    --hud-frame-max-width: 100vw;
    --hud-frame-height: auto;
    
    /* === HUD TIER ANCHOR POINTS === */
    /* Tier 1: Rusted - základné pozície prvkov na frame */
    --tier-rusted-left-module-x: 2vw;
    --tier-rusted-left-module-y: 8px;
    --tier-rusted-center-module-x: auto;
    --tier-rusted-center-module-y: 8px;
    --tier-rusted-right-module-x: 2vw;
    --tier-rusted-right-module-y: 8px;
    --tier-rusted-acc-bar-bottom: 200px;
    --tier-rusted-orb-center-x: 76px;  /* stredovy bod orbu na frame */
    --tier-rusted-orb-bottom: 36px;  /* pozícia od spodu */
    
    /* Tier 2: Advanced - príklad pre budúci upgrade */
    --tier-advanced-left-module-x: 3vw;
    --tier-advanced-left-module-y: 12px;
    --tier-advanced-center-module-x: auto;
    --tier-advanced-center-module-y: 12px;
    --tier-advanced-right-module-x: 3vw;
    --tier-advanced-right-module-y: 12px;
    --tier-advanced-acc-bar-bottom: 220px;
    
    /* Tier 3-10: Pridaj podľa potreby */
}

.hud-frame {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    pointer-events: none;
    z-index: 901;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    overflow: hidden;
    transition: opacity 0.3s ease; /* jemný prechod pri výmene tieru */
}

.hud-frame-img {
    width: 100%;
    height: auto;
    display: block;
    max-width: none;
    transition: opacity 0.3s ease;
}

.hud-bottom {
    display: grid;
    grid-template-columns: 1fr 1.6fr 1fr;
    gap: 10px;
    align-items: end;
    pointer-events: auto;
    width: 100vw;
    padding: 0 2vw;
    box-sizing: border-box;
    position: relative;
    z-index: 902;
}

.hud-left, .hud-center, .hud-right {
    background: rgba(25,25,25,0.35); /* viac transparentné, nech vynikne grafický rám */
    border: 0;
    box-shadow: none;
    padding: 8px;
}

.hud-left {
    position: relative;
    display: grid;
    grid-template-rows: auto auto auto auto auto;
    grid-template-columns: 1fr;
    align-items: center;
    justify-items: center;
    gap: 8px;
}
}

/* Tier-specific positioning */
.hud-frame--tier-rusted ~ .hud-bottom .hud-left,
.hud-frame--tier-rusted ~ .hud-bottom .hud-center,
.hud-frame--tier-rusted ~ .hud-bottom .hud-right {
    /* použitie anchor pointov pre Rusted */
}

.hud-frame--tier-rusted ~ .hud-top-center {
    bottom: var(--tier-rusted-acc-bar-bottom);
}

/* Tier 2: Advanced (príklad pre budúcnosť) */
.hud-frame--tier-advanced ~ .hud-top-center {
    bottom: var(--tier-advanced-acc-bar-bottom);
}

.hud-frame--tier-advanced ~ .hud-bottom .hud-left {
    padding-left: calc(var(--tier-advanced-left-module-x) + 8px);
}

.hud-frame--tier-advanced ~ .hud-bottom .hud-right {
    padding-right: calc(var(--tier-advanced-right-module-x) + 8px);
}

/* Top center ACC bar above console */
.hud-top-center {
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    bottom: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    pointer-events: auto;
    z-index: 902;
}
.top-center-label { color: var(--hud-accent-cyan); font-weight: bold; letter-spacing: 2px; font-size: 11px; }
.top-center-text { color: var(--hud-accent-cyan); font-size: 10px; opacity: 0.9; }

/* Reactor orb (placeholder) */
.reactor-orb {
    display: none; /* nahradené asset orbom */
}

@keyframes reactorPulse {
    0%, 100% { box-shadow: 0 0 30px rgba(0,255,200,0.6), inset 0 0 25px rgba(0,255,255,0.5); }
    50% { box-shadow: 0 0 50px rgba(0,255,200,0.9), inset 0 0 35px rgba(0,255,255,0.7); }
}

/* Wider bars inside modules */
.power-wide { width: 240px; }
.acc-wide { width: 360px; }
.xp-wide { width: 240px; }

/* === Base Energy Orb === */
.energy-orb {
    --fill-percent: 0%; /* JavaScript bude meniť túto premennú */
    --fill-fraction: 0; /* 0..1 na jemné efekty */
    position: absolute;
    bottom: 2.0vw;  /* proporcionálne - škáluje sa s oknomom */
    left: 2.15vw;  /* proporcionálne - škáluje sa s oknomom */
    z-index: 910; /* nad frame obrázkom */
    width: 11.25vw;  /* škálovanie s veľkosťou obrazovky */
    height: 10vw;    /* škálovanie s veľkosťou obrazovky */
    background: none;
    border-radius: 50%;
    overflow: hidden;
    filter: drop-shadow(0 0 20px rgba(255,170,0,0.5));
    transition: filter 0.3s ease;
}

.energy-orb::after {
    content: "";
    position: absolute;
    inset: 0;
    background-image: url('./assets/Rusted/HUD_baseenergyHP_Orb_Rusted.png');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 100% 100%;
    clip-path: inset(calc(100% - var(--fill-percent)) 0 0 0);
    opacity: 0.92;
    transition: clip-path 0.3s ease, opacity 0.3s ease;
}

/* Jemný vnútorný pohyb energie */
.energy-orb::before {
    content: "";
    position: absolute;
    inset: -1%;
    background-image: url('./assets/Rusted/HUD_baseenergyHP_Orb_Rusted.png');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 102% 102%;
    opacity: calc(var(--fill-fraction) * 0.32);
    mix-blend-mode: screen;
    filter: blur(0.18vw);
    transform-origin: 50% 50%;
    animation: orbSlowSpin 14s linear infinite;
    pointer-events: none;
}

@keyframes orbSlowSpin {
    from { transform: rotate(0deg) scale(1.02); }
    to   { transform: rotate(360deg) scale(1.02); }
}
.energy-orb-img {
    display: none; /* asset je background-image */
}
.energy-orb-liquid {
    display: none; /* maska nahrádza tekutinu */
}

/* Pulzovanie glowu pri vysokej energii */
.energy-orb.high-energy {
    animation: orbGlowDynamic 2.2s ease-in-out infinite;
}
@keyframes orbGlowDynamic {
    0%,100% { filter: drop-shadow(0 0 14px rgba(255,170,0,0.35)); }
    50% { filter: drop-shadow(0 0 24px rgba(255,170,0,0.55)); }
}

/* Enhanced labels */
.label-power { color: #44ff41; font-weight: bold; letter-spacing: 1.5px; font-size: 11px; margin-bottom: 4px; text-transform: uppercase; }
.label-acc { color: #00ffff; font-weight: bold; letter-spacing: 1px; font-size: 11px; margin-top: 8px; margin-bottom: 4px; }

.sync-indicator { color: #44ff41; font-size: 9px; margin-top: 4px; opacity: 0.7; }

/* Buttons row */
.controls-row { display: flex; gap: 8px; justify-content: center; align-items: center; margin-bottom: 6px; }
.hud-btn {
    flex: 1; padding: 8px; font-family: 'Rajdhani', sans-serif; letter-spacing: 1.5px; font-weight: 700; text-transform: uppercase; font-size: 10px; cursor: pointer; border-radius: 4px; transition: all 0.2s ease; border: 2px solid transparent; background: rgba(255,255,255,0.05);
}
.hud-btn-yellow { color: var(--hud-accent-yellow); border-color: var(--hud-accent-yellow); box-shadow: 0 0 12px rgba(255,255,0,0.15); background: linear-gradient(45deg, rgba(255,255,0,0.12), rgba(255,200,0,0.12)); }
.hud-btn-green  { color: var(--hud-accent-green);  border-color: var(--hud-accent-green);  box-shadow: 0 0 12px rgba(0,255,100,0.15); background: linear-gradient(45deg, rgba(0,255,100,0.12), rgba(100,255,100,0.12)); }
.hud-btn-orange { color: var(--hud-accent-orange); border-color: var(--hud-accent-orange); box-shadow: 0 0 12px rgba(255,170,0,0.15); background: linear-gradient(45deg, rgba(255,170,0,0.12), rgba(255,140,0,0.12)); }
.hud-btn-purple { color: var(--hud-accent-purple); border-color: var(--hud-accent-purple); box-shadow: 0 0 12px rgba(200,100,255,0.15); background: linear-gradient(45deg, rgba(200,100,255,0.12), rgba(150,100,255,0.12)); }
.hud-btn:hover { transform: translateY(-1px); box-shadow: 0 0 18px rgba(255,255,255,0.12); }

.transfer-btn {
    width: 100%; padding: 10px; background: linear-gradient(45deg, rgba(0,170,255,0.25), rgba(0,255,255,0.25)); color: #e0ffff; border: 2px solid #00f2fe; border-radius: 4px; box-shadow: 0 0 15px rgba(0,242,254,0.35); cursor: pointer; font-family: 'Rajdhani', sans-serif; letter-spacing: 1.5px; font-weight: 700; text-transform: uppercase; transition: all 0.2s ease; font-size: 10px;
}
.transfer-btn:hover { transform: translateY(-1px); box-shadow: 0 0 22px rgba(0,242,254,0.55); }

.neural-link-panel {
    margin-top: 8px;
    padding-top: 6px;
    border-top: 1px solid rgba(255,170,0,0.15);
    text-align: center;
}
.neural-label { color: #777; font-size: 8px; letter-spacing: 1.5px; margin-bottom: 4px; text-transform: uppercase; }
.mobile-status { font-size: 9px; font-weight: bold; padding: 5px 12px; border: 1px solid #ff4444; border-radius: 2px; display: inline-block; min-width: 120px; transition: all 0.5s ease; background: rgba(255,68,68,0.05); }

/* Level badge */
.level-badge {
    width: 90px; height: 90px; border-radius: 50%; margin: 0 auto 6px auto; display: flex; align-items: center; justify-content: center; color: #f6e7a6; font-weight: 900; letter-spacing: 1.5px; font-size: 14px; background: radial-gradient(circle, rgba(255,220,120,0.25) 0%, rgba(60,40,0,0.9) 70%); border: 3px solid #c9a24a; box-shadow: inset 0 0 20px rgba(255,200,80,0.35), 0 0 18px rgba(255,200,80,0.2);
}

/* Make the original top-left styles not interfere when hud-wrap is applied */
#hud.hud-wrap .bar-container { margin-bottom: 6px; }

/* Energetické bary */
.bar-container {
    width: 200px; 
    height: 18px; 
    border: 2px solid #44ff41; 
    padding: 2px; 
    background: rgba(0,0,0,0.5);
    margin-bottom: 5px;
}

.acc-container {
    width: 200px; 
    height: 10px; 
    border: 1px solid #00ffff; 
    padding: 1px; 
    background: rgba(0,0,0,0.5);
}

/* module-specific bar overrides */
.hud-left .bar-container { border-color: #44ff41; }
.hud-right .bar-container { border-color: #ffaa00; }
.hud-top-center .acc-container { border-color: #00ffff; }

/* Texty a popisky */
.status-text { font-size: 12px; margin-top: 5px; }

/* HP text pod orbom */
#energy-hp-text {
    text-align: center;
    color: #44ff41;
    font-weight: bold;
    font-size: 14px;
    margin: 4px 0 6px 0;
    text-shadow: 0 0 8px rgba(68,255,65,0.4);
    letter-spacing: 1px;
}


/* --- ENGEE AI UI --- */

/* Hlavný kontajner v ľavom hornom rohu */
/* Hlavný kontajner v pravom hornom rohu */
/* --- ENGEE AI UI - UPRAVENÁ VERZIA --- */

#angie-ui {
    position: absolute;
    top: 30px;
    right: 30px;
    display: flex;
    flex-direction: row-reverse;
    align-items: flex-start;
    z-index: 2000;
    /* Dôležité: 'auto' umožní klikanie */
    pointer-events: auto; 
    cursor: pointer;
    transition: all 0.5s ease;
}

/* Zväčšený a krajší rámček avatara */
#angie-avatar {
    width: 120px; /* Zväčšili sme z 90px */
    height: 120px;
    border: 3px solid #00ffff;
    background: radial-gradient(circle, rgba(0, 255, 255, 0.2) 0%, rgba(0, 0, 0, 0.8) 100%);
    box-shadow: 0 0 25px rgba(0, 255, 255, 0.6), inset 0 0 15px rgba(0, 255, 255, 0.4);
    overflow: hidden;
    position: relative;
    clip-path: polygon(10% 0, 100% 0, 100% 90%, 90% 100%, 0 100%, 0 10%); /* Skosené rohy */
}

/* Väčšia krabička s textom a efektom skla */
#angie-content {
    margin-right: 20px;
    background: linear-gradient(135deg, rgba(0, 20, 30, 0.95) 0%, rgba(0, 5, 10, 0.9) 100%);
    border-right: 5px solid #00ffff;
    padding: 20px 25px;
    min-width: 300px;
    max-width: 450px;
    box-shadow: 10px 10px 30px rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px); /* Efekt rozmazaného skla */
}

#angie-name {
    color: #00ffff;
    font-weight: 900;
    font-size: 14px;
    letter-spacing: 3px;
    margin-bottom: 12px;
    text-transform: uppercase;
    border-bottom: 1px solid rgba(0, 255, 255, 0.3);
    padding-bottom: 5px;
}

#angie-text {
    font-family: 'Courier New', monospace;
    color: #e0ffff;
    font-size: 16px; /* Väčšie písmo pre lepšiu čitateľnosť */
    line-height: 1.6;
}

/* Štýl pre nápovedu na kliknutie */
.click-hint {
    display: block;
    margin-top: 15px;
    font-size: 11px;
    color: #00ffff;
    text-transform: uppercase;
    letter-spacing: 1px;
    animation: pulse 1.5s infinite;
}

/* Animácia pulzovania pre nápovedu */
@keyframes pulse {
    0% { opacity: 0.3; }
    50% { opacity: 1; }
    100% { opacity: 0.3; }
}

.hidden { opacity: 0 !important; transform: translateX(50px); }
#engee-canvas {
    width: 100%;
    height: 100%;
    display: block;
}
/* --- ŠTÝLOVÉ SCI-FI TLAČIDLO PRE ENGEE --- */

/* --- FINÁLNE SCI-FI TLAČIDLO SO SKOSENÝM RÁMIKOM --- */

/* Hlavný kontajner tlačidla - drží len text a veľkosť */
.angie-next-btn {
    position: relative;
    /* Zrušíme všetky staré pozadia a rámiky */
    background: none !important;
    border: none !important;
    box-shadow: none !important;
    
    padding: 12px 35px; /* Priestor pre text */
    color: #00ffff;
    font-family: 'Rajdhani', sans-serif;
    font-weight: bold;
    font-size: 14px;
    letter-spacing: 3px;
    cursor: pointer;
    text-transform: uppercase;
    z-index: 5; /* Text musí byť úplne navrchu */
    transition: color 0.3s ease;
}

/* --- VRSTVA 1: "RÁMIK" (Spodná modrá vrstva) --- */
/* Toto vytvorí plný modrý tvar v pozadí */
.angie-next-btn::before {
    content: "";
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0; /* Roztiahnuť na celú plochu */
    z-index: -2; /* Posunúť úplne dozadu */
    background: #00ffff; /* Farba rámika */
    
    /* Tvar so skosenými rohmi */
    clip-path: polygon(0 0, 85% 0, 100% 30%, 100% 100%, 15% 100%, 0 70%);
    
    /* Žiara okolo celého tlačidla */
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.5);
    transition: all 0.3s ease;
}

/* --- VRSTVA 2: "VÝPLŇ" (Vrchná tmavá vrstva) --- */
/* Toto je tmavá vrstva, ktorá je o 2px menšia z každej strany,
   čím odhalí spodnú modrú vrstvu a vytvorí efekt rámika */
.angie-next-btn::after {
    content: "";
    position: absolute;
    /* Týmito číslami nastavuješ hrúbku rámika (teraz 2px) */
    top: 2px; left: 2px; right: 2px; bottom: 2px;
    z-index: -1; /* Za textom, ale pred spodnou vrstvou */
    background: rgba(0, 15, 25, 0.9); /* Tmavá výplň */
    
    /* MUSÍ MAŤ ROVNAKÝ TVAR AKO SPODNÁ VRSTVA */
    clip-path: polygon(0 0, 85% 0, 100% 30%, 100% 100%, 15% 100%, 0 70%);
    transition: all 0.3s ease;
}

/* --- EFEKTY PRI PREJDENÍ MYŠOU (Hover) --- */
.angie-next-btn:hover {
    color: white; /* Text zbelie */
}

/* Spodná vrstva (rámik) zmení farbu a žiaru */
.angie-next-btn:hover::before {
    background: #ffffff; /* Rámik zbelie */
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.9); /* Silná modrá žiara */
}

/* Vrchná vrstva (výplň) sa zosvetlí */
.angie-next-btn:hover::after {
    background: rgba(0, 255, 255, 0.2);
}
/* Kontajner pre tlačidlá dialógu */
.angie-btn-container {
    margin-top: 20px;
    display: flex;
    flex-direction: column; /* Tlačidlá budú v stĺpci pod sebou */
    gap: 12px;              /* Medzera medzi tlačidlami */
    width: 100%;
}

/* Úprava tlačidla pre zoznam možností */
.angie-next-btn {
    text-align: left;       /* Text v možnostiach bude zarovnaný doľava */
    padding: 12px 20px;
    width: fit-content;     /* Tlačidlo sa prispôsobí dĺžke textu */
    min-width: 150px;
}
/* Štýl pre možnosti, ktoré už hráč videl */
.angie-next-btn.visited {
    color: rgba(0, 255, 255, 0.3); /* Slabšia modrá */
    border-color: rgba(0, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0.2);
}
/* Štýl pre zakázané (vysivené) tlačidlo v dialógu */
.angie-next-btn.btn-disabled {
    opacity: 0.3;              /* Tlačidlo bude polopriehľadné */
    cursor: not-allowed;       /* Zmení kurzor na "zakázané" */
    border-color: #555 !important;
    color: #888 !important;
    box-shadow: none !important; /* Odstránime žiarenie */
    background: rgba(80, 80, 80, 0.2) !important;
}

/* --- SKILLS PANEL (SPECIAL) --- */

.skills-panel {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 400px;
    background: rgba(0, 0, 0, 0.85);
    border: 2px solid #ffff00;
    border-radius: 4px;
    padding: 15px;
    font-family: 'Courier New', monospace;
    color: #ffff00;
    z-index: 999;
    max-height: 500px;
    overflow-y: auto;
    box-shadow: 0 0 20px rgba(255, 255, 0, 0.4);
}

.skills-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
    margin-bottom: 15px;
}

.skill-card {
    background: rgba(50, 50, 50, 0.6);
    border: 1px solid #ffff00;
    padding: 10px;
    border-radius: 2px;
    text-align: center;
    transition: all 0.2s ease;
}

.skill-card:hover {
    background: rgba(80, 80, 0, 0.6);
    box-shadow: 0 0 10px rgba(255, 255, 0, 0.3);
}

.skill-key {
    font-size: 20px;
    font-weight: bold;
    color: #ffff00;
    margin-bottom: 5px;
}

.skill-name {
    font-size: 11px;
    font-weight: bold;
    color: #00ffff;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.skill-desc {
    font-size: 9px;
    color: #aaaaaa;
    margin: 5px 0;
    height: 20px;
    overflow: hidden;
}

.skill-value {
    font-size: 24px;
    font-weight: bold;
    color: #00ff41;
    margin: 8px 0;
}

.skill-breakdown {
    display: flex;
    justify-content: space-around;
    font-size: 10px;
    color: #ffff00;
    margin-bottom: 8px;
}

.skill-breakdown .base {
    color: #ffff00;
}

.skill-breakdown .bonus {
    color: #00ff41;
}

.skill-btn {
    width: 100%;
    padding: 6px;
    background: rgba(0, 255, 100, 0.3);
    border: 1px solid #00ff41;
    color: #00ff41;
    font-weight: bold;
    font-size: 12px;
    cursor: pointer;
    border-radius: 2px;
    transition: all 0.2s ease;
}

.skill-btn:hover:not(:disabled) {
    background: rgba(0, 255, 100, 0.5);
    box-shadow: 0 0 8px rgba(0, 255, 65, 0.5);
}

.skill-btn:disabled {
    background: rgba(100, 100, 100, 0.2);
    border-color: #666;
    color: #666;
    cursor: not-allowed;
}

.perks-section {
    margin-top: 15px;
    border-top: 1px solid #ffff00;
    padding-top: 10px;
}

.perks-section.hidden {
    display: none;
}

.perks-section h4 {
    margin: 0 0 10px 0;
    font-size: 12px;
    color: #ffff00;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.perks-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.perk-item {
    background: rgba(50, 50, 50, 0.6);
    border-left: 3px solid #ffff00;
    padding: 8px;
    border-radius: 2px;
    font-size: 10px;
}

.perk-item.active {
    border-left-color: #00ff41;
    background: rgba(0, 50, 0, 0.4);
}

.perk-item.inactive {
    opacity: 0.5;
}

.perk-name {
    font-weight: bold;
