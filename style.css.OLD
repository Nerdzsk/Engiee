.quest-tab {
    padding: 8px 20px;
    background: transparent;
    border: 2px solid rgba(200, 100, 255, 0.3);
    color: #999;
    font-family: 'Courier New', monospace;
    font-weight: bold;
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-size: 12px;
    white-space: nowrap;
}

.quest-tab.active {
    background: rgba(200, 100, 255, 0.2);
    border-color: #cc88ff;
    color: #cc88ff;
    box-shadow: 0 0 10px rgba(200, 100, 255, 0.3);
}

.quest-modal-content-inner {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
}

.quest-item {
    background: rgba(30, 30, 60, 0.7);
    border: 1px solid rgba(200, 100, 255, 0.2);
    border-radius: 6px;
    padding: 15px;
    margin-bottom: 15px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.quest-item:hover {
    background: rgba(40, 40, 80, 0.9);
    border-color: #cc88ff;
    box-shadow: 0 0 10px rgba(200, 100, 255, 0.2);
}

.quest-item-title {
    font-size: 14px;
    font-weight: bold;
    color: #cc88ff;
    margin-bottom: 5px;
    font-family: 'Courier New', monospace;
}

.quest-item-desc {
    font-size: 12px;
    color: #aaa;
    margin-bottom: 10px;
    line-height: 1.4;
}

.quest-item-objectives {
    font-size: 11px;
    color: #888;
    margin-bottom: 8px;
}

.quest-objective {
    padding: 5px 0;
    margin-left: 10px;
}

.quest-objective.completed {
    color: #44ff41;
}

.quest-objective.incomplete {
    color: #ff8844;
}

.quest-rewards {
    font-size: 11px;
    color: #ffaa00;
    margin-top: 10px;
    padding-top: 10px;
    border-top: 1px solid rgba(255, 170, 0, 0.2);
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

/* === HUD Skill Points Indicator — vedľa tlačidla Skills === */
.skill-points-indicator {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 5px 10px;
    margin: 0 6px;
    background: linear-gradient(135deg, rgba(255,220,0,0.25), rgba(255,255,0,0.15));
    border: 2px solid #ffff00;
    color: #ffff00;
    border-radius: 999px;
    font-family: 'Rajdhani', sans-serif;
    font-weight: 900;
    font-size: 11px;
    box-shadow: 0 0 16px rgba(255,255,0,0.55);
    cursor: pointer;
    transition: transform 0.15s ease, opacity 0.15s ease, box-shadow 0.15s ease;
    user-select: none;
    animation: skillPulse 1.5s ease-in-out infinite;
}
.skill-points-indicator:hover {
    transform: scale(1.08);
    box-shadow: 0 0 24px rgba(255,255,0,0.85);
    animation: none;
}
.skill-points-indicator.hidden { display: none; }

@keyframes skillPulse {
    0%, 100% { box-shadow: 0 0 16px rgba(255,255,0,0.55); }
    50% { box-shadow: 0 0 24px rgba(255,255,0,0.75); }
}

/* === Responzívnosť === */
@media (max-width: 1280px) {
    .hud-bottom { grid-template-columns: 1fr 1.5fr 1fr; gap: 8px; padding: 0 1.5vw; }
    .hud-top-center { bottom: 180px; }
    .reactor-orb { width: 90px; height: 90px; margin-bottom: 4px; }
    .level-badge { width: 85px; height: 85px; font-size: 13px; margin-bottom: 4px; }
    .power-wide, .xp-wide { width: 200px; }
    .acc-wide { width: 300px; }
    .hud-btn { font-size: 9px; padding: 7px; }
    .label-power { font-size: 10px; margin-bottom: 3px; }
    .status-text { font-size: 10px; margin-top: 3px; }
}

@media (max-width: 1024px) {
    .hud-bottom { grid-template-columns: 1fr 1.4fr 1fr; gap: 6px; }
    .hud-top-center { bottom: 170px; }
    .reactor-orb { width: 80px; height: 80px; }
    .level-badge { width: 75px; height: 75px; font-size: 12px; }
    .power-wide, .xp-wide { width: 180px; }
    .acc-wide { width: 260px; }
}

@media (max-width: 768px) {
    .hud-bottom { grid-template-columns: 1fr; gap: 8px; padding: 0 1vw; }
    .hud-left, .hud-center, .hud-right { padding: 6px; }
    .hud-top-center { bottom: 150px; }
    .reactor-orb { width: 70px; height: 70px; }
    .level-badge { width: 65px; height: 65px; font-size: 11px; }
    .power-wide, .xp-wide { width: 160px; }
    .acc-wide { width: 240px; }
    .hud-btn { font-size: 8px; padding: 6px; }
    .controls-row { gap: 6px; margin-bottom: 4px; }
}

@media (max-width: 480px) {
    .hud-bottom { grid-template-columns: 1fr; padding: 0 0.5vw; }
    .hud-top-center { bottom: 120px; font-size: 9px; }
    .reactor-orb { width: 60px; height: 60px; }
    .level-badge { width: 55px; height: 55px; font-size: 10px; }
    .power-wide, .xp-wide { width: 140px; }
    .acc-wide { width: 200px; }
    .transfer-btn { font-size: 9px; padding: 8px; }
}

@media (min-width: 1920px) {
    .hud-bottom { gap: 14px; padding: 0 3vw; }
    .hud-top-center { bottom: 210px; }
    .reactor-orb { width: 120px; height: 120px; }
    .level-badge { width: 110px; height: 110px; font-size: 16px; }
    .power-wide, .xp-wide { width: 280px; }
    .acc-wide { width: 400px; }
    .hud-btn { font-size: 11px; padding: 9px; }
}

@media (min-width: 2560px) {
    .hud-bottom { gap: 18px; padding: 0 5vw; }
    .hud-top-center { bottom: 240px; }
    .reactor-orb { width: 160px; height: 160px; }
    .level-badge { width: 140px; height: 140px; font-size: 18px; }
    .power-wide, .xp-wide { width: 350px; }
    .acc-wide { width: 500px; }
    .hud-btn { font-size: 12px; padding: 10px; }
}

/* Dočasne skryjeme zelený power bar, necháme len orb */
.hud-left .bar-container.power-wide { display: none; }
.hud-left #energy-text { display: none; }
.hud-left #energy-hp-text { display: none; }
.hud-left .sync-indicator { display: none; }
.hud-left .label-power { display: none; }