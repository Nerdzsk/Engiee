        position: relative;
        background: linear-gradient(135deg, rgba(255, 170, 0, 0.15), rgba(255, 220, 0, 0.1));
        border: 3px solid #ffaa00;
        border-radius: 12px;
        padding: 50px;
        text-align: center;
        min-width: 400px;
        box-shadow: 0 0 50px rgba(255, 170, 0, 0.6), inset 0 0 30px rgba(255, 170, 0, 0.1);
        animation: levelUpPulse 0.5s ease;
    }

    .levelup-glow {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255, 170, 0, 0.3) 0%, transparent 70%);
        animation: glowPulse 2s infinite;
        pointer-events: none;
    }

    .levelup-title {
        font-family: 'Courier New', monospace;
        font-size: 48px;
        color: #ffaa00;
        margin: 0 0 20px 0;
        text-shadow: 0 0 20px rgba(255, 170, 0, 0.8), 0 0 40px rgba(255, 170, 0, 0.4);
        letter-spacing: 4px;
        animation: textGlow 1s infinite alternate;
    }

    .levelup-info {
        font-family: 'Courier New', monospace;
        font-size: 24px;
        color: #ffffff;
        margin: 20px 0;
        letter-spacing: 2px;
    }

    .levelup-rewards {
        font-family: 'Courier New', monospace;
        font-size: 18px;
        color: #ffdd00;
        margin: 30px 0;
        padding: 20px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 170, 0, 0.5);
        border-radius: 6px;
    }

    .levelup-close-btn {
        font-family: 'Courier New', monospace;
        font-size: 16px;
        font-weight: bold;
        padding: 15px 40px;
        background: linear-gradient(45deg, #ffaa00, #ffdd00);
        color: #000;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        letter-spacing: 2px;
        text-transform: uppercase;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 170, 0, 0.5);
    }

    .levelup-close-btn:hover {
        background: linear-gradient(45deg, #ffdd00, #ffff00);
        box-shadow: 0 0 30px rgba(255, 170, 0, 0.8);
        transform: scale(1.05);
    }

    @keyframes levelUpPulse {
        0% { transform: scale(0.8); opacity: 0; }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); opacity: 1; }
    }

    @keyframes glowPulse {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 0.6; }
    }

    @keyframes textGlow {
        from { text-shadow: 0 0 20px rgba(255, 170, 0, 0.6), 0 0 40px rgba(255, 170, 0, 0.3); }
        to { text-shadow: 0 0 30px rgba(255, 170, 0, 1), 0 0 60px rgba(255, 170, 0, 0.6); }
